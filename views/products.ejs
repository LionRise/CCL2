                    <!-- List view -->
                    <% for(let i = 0; i < products.length; i++) { %>
                        <div class="row justify-content-center mb-3">
                            <div class="col-md-12">
                                <div class="card shadow-0 border rounded-3">
                                    <div class="card-body">
                                        <div class="row g-0">
                                            <div class="col-xl-3 col-md-4 d-flex justify-content-center">
                                                <a href="/products/<%= products[i].id %>">
                                                <img src="../../uploads/<%= products[i].productPicName %>"
                                                     alt="<%= products[i].title %>"
                                                     class="w-100"/>
                                                </a>
                                            </div>
                                            <div class="col-xl-6 col-md-5 col-sm-7">
                                                <a href="/products/<%= products[i].id %>" class="text-dark">
                                                    <h5><%= products[i].title %></h5>
                                                </a>
                                                <div class="d-flex flex-row">
                                                    <div class="text-warning mb-1 me-2">
                                                        <i class="bi bi-star-fill"></i>
                                                        <i class="bi bi-star-fill"></i>
                                                        <i class="bi bi-star-fill"></i>
                                                        <i class="bi bi-star-fill"></i>
                                                        <i class="bi bi-star-half"></i>
                                                        <span class="ms-1 text-dark">4.5</span>
                                                    </div>
                                                    <span class="text-muted"><%= Math.floor(Math.random() * 2000) %> orders</span>
                                                </div>

                                                <p class="text mb-4 mb-md-0">
                                                    <%= products[i].description %>
                                                </p>
                                            </div>
                                            <div class="col-xl-3 col-md-3 col-sm-5">
                                                <div class="d-flex flex-row align-items-center mb-1">
                                                    <h4 class="mb-1 me-1"><%= products[i].price %>€</h4>
                                                    <span class="text-danger"><s><%= products[i].price * 0.9 %>€</s></span>
                                                </div>
                                                <h6 class="text-success">Free shipping</h6>
                                                <div class="mt-4">
                                                    <button class="btn btn-primary shadow-0" type="button">
                                                        <a href="/products/<%= products[i].id %>" class="text-white">
                                                            Buy this
                                                            <i class="me-1 bi bi-cart"></i>
                                                        </a>
                                                    </button>
                                                    <a class="btn btn-light border px-2 pt-2 icon-hover"><i class="bi bi-heart fa-lg px-1"></i>Save</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

