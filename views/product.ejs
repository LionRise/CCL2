        @media (min-width: 992px) {
            .d-lg-inline-block {
                display: inline-block !important;
            }
        }

        .rounded {
            border-radius: 0.25rem !important;
        }

        btn {
            cursor: pointer;
        }

        .responsive {
            width: 100%;
            height: auto;
        }

    </style>

</head>

